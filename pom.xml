<!--    mvn dependency:tree >> log/dependency.log-->
<!--    https://blog.csdn.net/u011669700/article/details/80195886-->
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>io.netty</groupId>
                <artifactId>netty-all</artifactId>
                <version>4.1.18.Final</version>
            </dependency>
